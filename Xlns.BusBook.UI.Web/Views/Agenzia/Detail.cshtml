@using Xlns.BusBook.Core.Model;
@model Xlns.BusBook.Core.Model.Agenzia
@{
    ViewBag.Title = "Dettaglio agenzia";
}
@section scripts{
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/agenzia.detail.js")"></script>
}

<div id="content-wrapper" class="container_16">
    <div id="main" class="grid_16">
        <h3>@ViewBag.Title</h3>
        <br />
        <div class="grid_6 alpha">
            <fieldset>
                <div>
                    @Html.LabelFor(model => model.Nome)</div>
                <div>
                    @Html.DisplayFor(model => model.Nome)
                </div>
                <div>
                    @Html.LabelFor(model => model.RagioneSociale)</div>
                <div>
                    @Html.DisplayFor(model => model.RagioneSociale)
                </div>
                <div>
                    @Html.LabelFor(model => model.PIva)</div>
                <div>
                    @Html.DisplayFor(model => model.PIva)
                </div>
                <div>
                    @Html.LabelFor(model => model.Location)</div>
                <div>
                    @Html.DisplayFor(model => model.Location.IndirizzoLeggibile)
                </div>
                <div>
                    @Html.LabelFor(model => model.Email)</div>
                <div>
                    @Html.DisplayFor(model => model.Email)
                </div>
                <div>
                    @Html.LabelFor(model => model.Telefono)</div>
                <div>
                    @Html.DisplayFor(model => model.Telefono)
                </div>
                <div>
                    @Html.LabelFor(model => model.Fax)</div>
                <div>
                    @Html.DisplayFor(model => model.Fax)
                </div>
                @Html.HiddenFor(model => model.Location.Lat, new { id = "hiddenLat" })
                @Html.HiddenFor(model => model.Location.Lng, new { id = "hiddenLng" })
            </fieldset>
        </div>
        <div class="grid_8 omega">
            <div style="height: 20px">
                <span id="loaderMessage"></span>
            </div>
            <div id="map_canvas" style="width: 500px; height: 350px;">
            </div>
        </div>
    </div>
    <div class="grid_16">
        <p>
            @Html.ActionLink("Modifica", "Edit", new { id = Model.Id }, new { @class = "button" })
            @Html.ActionLink("Torna alla lista", "List", null, new { @class = "button" })
        </p>
    </div>
</div>
