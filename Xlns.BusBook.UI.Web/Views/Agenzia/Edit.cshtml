<link href="@Url.Content("~/Content/StyleTextXlns.css")" rel="stylesheet" type="text/css" media="screen"/>
@using Xlns.BusBook.UI.Web.Models;
@model Xlns.BusBook.Core.Model.Agenzia
@{
    if (Model.Id == 0)
    {
        ViewBag.Title = "Nuova agenzia";
    }
    else
    {
        ViewBag.Title = "Modifica agenzia";
    }
}
@section scripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#submitButton').click(function (evt) {
                evt.preventDefault();
                var $form = $('#salvaAgenziaForm');
                if ($form.valid()) {
                    $form.submit();
                }
            });
        });
    </script>
}
<div id="content-wrapper">
    <div id="content">
        <div id="main">
            <h3>
                @ViewBag.Title</h3>
            @using (Html.BeginForm("Save", "Agenzia", FormMethod.Post, new { id = "salvaAgenziaForm" }))
            {
                @Html.ValidationSummary(true)
    
                <div style="display: table">
                    <div style="display: table-row">
                        <div style="display: table-cell; padding-right: 20px">
                            <br />
                            @Html.HiddenFor(model => model.Id)
                            <div class="labelizer">
                                @Html.LabelFor(model => model.Nome)
                                @Html.Label("*")
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Nome)
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                            <div class="labelizer">
                                @Html.LabelFor(model => model.RagioneSociale)
                                @Html.Label("*")
                            </div>
                            <div>
                                @Html.EditorFor(model => model.RagioneSociale)
                                @Html.ValidationMessageFor(model => model.RagioneSociale)
                            </div>
                            <div class="labelizer">
                                @Html.LabelFor(model => model.PIva)
                                @Html.Label("*")
                            </div>
                            <div>
                                @Html.EditorFor(model => model.PIva)
                                @Html.ValidationMessageFor(model => model.PIva)
                            </div>
                            <div class="labelizer">
                                @Html.LabelFor(model => model.Email)
                                @Html.Label("*")
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="labelizer">
                                @Html.LabelFor(model => model.Telefono)
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Telefono)
                                @Html.ValidationMessageFor(model => model.Telefono)
                            </div>
                            <div class="labelizer">
                                @Html.LabelFor(model => model.Fax)
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Fax)
                                @Html.ValidationMessageFor(model => model.Fax)
                            </div>
                            <br />
                        </div>
                        <!-- chiusura cella -->
                        @{Html.RenderAction("Edit", "Location",
                         new
                         {
                             locationPartialView = new LocationPartialView()
                                  {
                                      Location = Model.Location,
                                      CssStyleForDataFieldDiv = "display: table-cell; padding-right: 20px",
                                      CssStyleForMapDiv = "display: table-cell;"
                                  }
                         });
                        }
                    </div>
                    <!-- chiusura riga -->
                </div>
            
             
                <input type="button" value="Salva" id="submitButton" class="button" />
                <input type="button" value="Annulla" id="cancelButton" class="button" 
                    onclick="window.location='@Href("~/Agenzia/List")'" />
            }
        </div>
    </div>
</div>
<div id="sidebar">
    
</div>
