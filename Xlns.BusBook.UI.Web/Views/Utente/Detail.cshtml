@using Xlns.BusBook.Core.Model;
@model Xlns.BusBook.Core.Model.Utente
@{
    ViewBag.Title = "Dettaglio utente";
}
@section head{
    <link href="@Url.Content("~/Content/agenzia.css")" rel="stylesheet" type="text/css" media="screen"/>
}
<div id="content-wrapper" class="container_16">
    <div id="main" class="grid_16">
        <h3>@ViewBag.Title</h3>
        <br />
        <fieldset>
            <legend>Utente</legend>
            <div>
                @Html.LabelFor(model => model.Cognome)</div>
            <div>
                @Html.DisplayFor(model => model.Cognome)
            </div>
            <div>
                @Html.LabelFor(model => model.Nome)</div>
            <div>
                @Html.DisplayFor(model => model.Nome)
            </div>
            <div>
                @Html.LabelFor(model => model.Username)</div>
            <div>
                @Html.DisplayFor(model => model.Username)
            </div>
            <div>
                @Html.LabelFor(model => model.Agenzia.Nome)</div>
            <div>
                @Html.DisplayFor(model => model.Agenzia.Nome)
            </div>

        </fieldset>
        <p>
            @Html.ActionLink("Modifica", "Edit", new { id = Model.Id }, new { @class = "button" })
            @Html.ActionLink("Torna alla lista", "Index", null, new { @class = "button" })
        </p>
    </div>
</div>
