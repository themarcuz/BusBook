@model Xlns.BusBook.UI.Web.Models.ListFlyerView
@{
    ViewBag.Title = "Gestisci i tuoi Flyers";
}
@section head{
    <link href="@Url.Content("~/Content/tiledList.css")" rel="stylesheet" type="text/css" media="screen"/>
}
@section scripts{
    <script src="@Url.Content("~/Content/scripts/flyer.tile.js")" type="text/javascript"></script>
}
<div id="content-wrapper" class="container_16">
    <div id="main" class="grid_6">
        <h3>@ViewBag.Title</h3>
        <p>
            @Html.ActionLink("Nuovo Flyer", "Edit", new { id = 0 }, new { @class = "button" })
        </p>
        @foreach (var flyer in Model.flyers)
        {
            Html.RenderAction("ShowTile", new { flyer = flyer, isShort = false, isEditable = true, isDetailAjax = false });
        }
        <p>
            @Html.ActionLink("DashBoard", "DashBoard", "Home", null, new { @class = "button"})
        </p>
    </div>
</div>
<div style="visibility: hidden; ">
    <div id="dialog-confirm" title="Elimina Flyer">
	    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Sicuro di voler cancellare il Flyer?</p>
    </div>
</div>

