@using Xlns.BusBook.UI.Web.Models
@{
    ViewBag.Title = "Index";    
}
@section head{
    <style type="text/css">
        #content-wrapper
        {
            margin: 0 auto;
            background: #fff url(../images/content-bg.xlns.gif) repeat-y center top;
            padding-bottom: 35px;
            padding-top: 5px;
            overflow: auto;
        }
        
        
        #slides
        {
            width: 600px;
            height: 400px;
            border: 2px dotted silver;
        }
        
        #slides h1
        {
            margin: 50px 0px 50px 10px;
            text-align: center;
        }
        
        .slides_container
        {
            width: 600px;
            height: 350px;
        }
        .slides_container div
        {
            width: 600px;
            height: 350px;
            display: block;
        }
        .pagination
        {
            margin: 26px auto 0;
            width: 100px;
        }
        .pagination li
        {
            float: left;
            margin: 0 1px;
            list-style: none;
        }
        .pagination li a
        {
            display: block;
            width: 12px;
            height: 0;
            padding-top: 12px;
            background-image: url('../../Content/img/pagination.png');
            background-position: 0 0;
            float: left;
            overflow: hidden;
        }
        .pagination li.current a
        {
            background-position: 0 -12px;
        }
        
        .SliderFontstyle
        {
            margin: 10px 10px 10px 10px;
            font-size: 16px;
            text-align: justify;
        }
        
        .fontstyle
        {
            font-size: 13px;
            text-align: left;
        }
    </style>
}
<div id="content">
    <div id="slides">
        <div class="slides_container">
            <div>
                <h1>
                    Cos'è Parti Comodo?</h1>
                <p class="SliderFontstyle">
                    Parti Comodo è un <b>innovativo sistema di programmazione di viaggi in Bus</b>.
                    Da oggi potrai creare facilmente la tua <b>personale programmazione viaggi</b> fatta
                    da offerte mensili e/o settimanali che sfruttano il sistema per completare la tua
                    offerta. Arricchisci il sito della tua Agenzia collegando la tua personale vetrina
                    di Parti Comodo o crea una o piu locandine informatiche delle iniziative che più
                    ti soddisfano.
                </p>
            </div>
            <div>
                <h1>
                    Perché usare Parti Comodo?</h1>
                <p class="SliderFontstyle">
                    per svariate ragioni non riesci a commercializzare la tua iniziativa? oggi con questo
                    sistema ti puoi permettere anche te di evidenziare la tua iniziativa e attivare
                    una organizzazione commerciale che puo' evidenziare la tua iniziativa insieme ad
                    altre programmazioni cosi da completare un ventaglio di offerte senza dover forzatamente
                    impegnare un numero di persone che e' sempre piu difficile da realizzare.
                </p>
            </div>
            <div>
                <h1>
                    BusBook funziona?</h1>
                <p class="SliderFontstyle">
                    Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Donec libero. Suspendisse
                    bibendum. Cras id urna. Morbi tincidunt, orci ac convallis aliquam, lectus turpis
