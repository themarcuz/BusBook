<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/KeepItSimple11/css/screen.css")" rel="stylesheet" type="text/css" media="screen"/>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("head", false)
    <script type="text/javascript">
        $(function () {
            $("#qsearch").bind("focus",
                                function () {
                                    $(this).val("");
                                }
                          );
            $("#qsearch").bind("blur",
                                function () {
                                    if ($(this).val() == null || $(this).val() == "")
                                        $(this).val("Cerca...");
                                }
                          );
            $("#nav > ul > li")[@(ViewContext.ViewData["currentMenuItem"])].id="current";
        });
    </script>
</head>
<body>
    <!-- header starts-->
    <div id="header-wrap">
        <div id="header" class="container_16">
            @RenderSection("logo", false)            
            <!-- navigation -->
    <div id="nav">
        <ul>
            <li ><a href="@Href("~")">Home</a></li>
            <li >@Html.ActionLink("Agenzie", "List", "Agenzia")</li>
            <li >@Html.ActionLink("Utenti", "List", "Utente")</li>
            <li><a href="style.html">Style Demo</a></li>
            <li><a href="blog.html">Blog</a></li>
            <li><a href="index.html">Services</a></li>
            <li><a href="index.html">Support</a></li>
            <li><a href="index.html">About</a></li>
        </ul>
    </div>
            <div id="header-image">
            </div>
            <form id="quick-search" action="index.html" method="get">
            <p>
                <label for="qsearch">
                    Cerca:</label>
                <input class="tbox" id="qsearch" type="text" name="qsearch" value="Cerca..." title="Start typing and hit ENTER" />
                <input class="btn" alt="Search" type="image" name="searchsubmit" title="Search" src="@Href("~/Content/KeepItSimple11/images/search.gif")" />
            </p>
            </form>
            <!-- header ends here -->
        </div>
    </div>
    <!-- content starts -->
    <div id="content-outer">
            
            @RenderBody()
       
    </div>
    <div id="footer-wrapper" class="container_16">
        <div id="footer-content">
            @RenderSection("footer", false)
        </div>
    </div>
    @RenderSection("scripts", false)
</body>
</html>
